<UserControl x:Class="RjisFilter.UserControls.DeleteTocDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RjisFilter.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             IsTabStop="False"
             Width="400"
             Height="150"
             FocusManager.FocusedElement="{Binding ElementName=NoButton}"
             >
    <Grid>
        <StackPanel Margin="0,10,0,10">
            <TextBlock HorizontalAlignment="Center">Are you sure you want to delete <Run Text="{Binding Toc,Mode=OneWay}"/> and all its stations?</TextBlock>
            <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button HorizontalAlignment="Center" Content="_Yes" MinWidth="80" Command="{Binding YesCommand}" />
                <Button x:Name="NoButton"
                    Margin="10,0,0,0" HorizontalAlignment="Center" Content="_No" IsDefault="True" MinWidth="80"
                    Command="{Binding NoCommand}"
                    />
        </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

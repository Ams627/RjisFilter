<Application x:Class="RjisFilter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RjisFilter"
             xmlns:vm="clr-namespace:RjisFilter.ViewModels"
             xmlns:uc="clr-namespace:RjisFilter.UserControls"
             
             Startup="Application_Startup">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:DeleteTocViewModel}">
            <uc:DeleteTocDialog/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AddTocViewModel}">
            <uc:AddTocDialog/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TocEditorViewModel}">
            <uc:TocEditorDialog/>
        </DataTemplate>
    </Application.Resources>
</Application>
